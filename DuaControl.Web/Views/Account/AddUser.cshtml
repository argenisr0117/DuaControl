@model DuaControl.Web.Models.AddUserViewModel
@{
    ViewData["Title"] = "Crear usuario";
}

<h3>Agregar nuevo usuario</h3>

<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />

            <div class="form-group">
                <label asp-for="DomainUser" class="control-label bold"></label>
                <input type="text" asp-for="DomainUser" class="form-control" />
                <span asp-validation-for="DomainUser" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="RoleId" class="control-label bold"></label>
                <select asp-for="RoleId" asp-items="Model.RolesList" class="form-control"></select>
                <span asp-validation-for="RoleId" class="text-danger"></span>
            </div>

            <div class="form-group-sm">
                <button type="submit" title="Guardar" class="btn btn-primary" id="btnSave"><i class="fa fa-check c-white"></i></button>
                <a asp-action="Index" class="btn btn-success" title="Volver atrás"><i class="fa fa-arrow-left c-white"></i></a>
            </div>
        </form>

    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
