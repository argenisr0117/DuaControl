@model DuaControl.Web.Data.Entities.Puerto

@{
    ViewData["Title"] = "Editar";
}

<h3>Editar puerto</h3>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <button type="submit" title="Guardar" class="btn btn-primary"><i class="fa fa-check c-white"></i></button>
                <a asp-action="Index" class="btn btn-success" title="Volver atrás"><i class="fa fa-arrow-left c-white"></i></a>
            </div>
        </form>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
